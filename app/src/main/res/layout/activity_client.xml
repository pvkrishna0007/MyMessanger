<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ClientActivity">

    <Button
        android:id="@+id/cbtn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start" />

    <TextView
        android:id="@+id/ctv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbtn_start"
        android:text="Client" />

    <EditText
        android:id="@+id/cet_ip_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ctv_title"
        android:ems="10"
        android:hint="Enter IpAddress"
        android:text="192.168.60.57" />

    <EditText
        android:id="@+id/cet_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cet_ip_address"
        android:hint="Enter message here" />

    <Button
        android:id="@+id/cbtn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cet_message"
        android:text="Send" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cbtn_send">

        <TextView
            android:id="@+id/ctv_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messages:" />
    </ScrollView>

</RelativeLayout>
